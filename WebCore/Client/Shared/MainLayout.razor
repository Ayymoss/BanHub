                        </svg>
                    </a>
                    <RadzenButton Click="ToggleTheme" Size="ButtonSize.Small" Shade="Shade.Lighter" Icon="@(_isDarkTheme ? "dark_mode" : "light_mode")"
                                  ButtonStyle="@(_isDarkTheme ? ButtonStyle.Light : ButtonStyle.Dark)" class="@ThemeButtonClass"/>
                    <RadzenButton Icon="visibility" ButtonStyle="ButtonStyle.Secondary" Shade="Shade.Lighter" Text="@_activeUserCount.ToString()"
                                  Size="ButtonSize.ExtraSmall" class="rz-mr-4"/>
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
    </RadzenHeader>
    <RadzenSidebar Style="width: 240px" @bind-Expanded="_drawerOpen">
        <NavMenu/>
    </RadzenSidebar>
    <RadzenBody @ref="_body" class="rz-p-8">
        <ChildContent>
            <RadzenContentContainer Name="main">
                @Body
            </RadzenContentContainer>
        </ChildContent>
    </RadzenBody>
</RadzenLayout>
