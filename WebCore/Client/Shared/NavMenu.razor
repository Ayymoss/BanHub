<RadzenStack Orientation="Orientation.Vertical" JustifyContent="JustifyContent.SpaceBetween" Style="height: 100%">
    <RadzenPanelMenu>
        <RadzenPanelMenuItem Match="NavLinkMatch.All" Path="/" Text="Home" Icon="home"/>
        <RadzenPanelMenuItem Match="NavLinkMatch.Prefix" Path="/Players" Text="Players" Icon="groups"/>
        <RadzenPanelMenuItem Match="NavLinkMatch.Prefix" Path="/Penalties" Text="Penalties" Icon="report"/>
        <RadzenPanelMenuItem Match="NavLinkMatch.Prefix" Path="/Communities" Text="Communities" Icon="dns"/>
        <RadzenPanelMenuItem Match="NavLinkMatch.Prefix" Path="/Servers" Text="Servers" Icon="storage"/>
        <RadzenPanelMenuItem Match="NavLinkMatch.Prefix" Path="/Statistics" Text="Statistics" Icon="query_stats"/>
        <AuthorizeView>
            <Authorized>
                <RadzenPanelMenuItem Match="NavLinkMatch.Prefix" Path="@($"/Players/{_identity}")" Text="My Profile" Icon="person"/>
            </Authorized>
        </AuthorizeView>
    </RadzenPanelMenu>
    <RadzenStack Orientation="Orientation.Vertical" class="rz-ml-2">
        <LoginComponent/>
        <RadzenFormField Text="Search" Variant="Variant.Outlined">
            <ChildContent>
                <RadzenTextBox @bind-Value="_searchValue" Change="OnSearch" Style="width:100%"/>
            </ChildContent>
            <End>
                <RadzenIcon Icon="search" IconStyle="IconStyle.Info"/>
            </End>
        </RadzenFormField>
        <RadzenStack AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.SpaceBetween" Gap="0" class="rz-py-2">
            <RadzenText Text="BanHub by Amos" TextStyle="TextStyle.Caption" class="rz-mb-0" style="color: var(--rz-text-disabled-color);" TagName="TagName.P" TextAlign="TextAlign.Center"/>
            <RadzenText Text="@_versionNumber" TextStyle="TextStyle.Caption" class="rz-mb-0" style="color: var(--rz-text-disabled-color);" TagName="TagName.P" TextAlign="TextAlign.Center"/>
        </RadzenStack>
    </RadzenStack>
</RadzenStack>
