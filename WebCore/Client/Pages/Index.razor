@page "/"
@using Penalty = BanHub.WebCore.Shared.Models.IndexView.Penalty

<PageTitle>Index | Ban Hub</PageTitle>

<RadzenRow JustifyContent="JustifyContent.SpaceEvenly">
    <RadzenColumn Size="6" SizeXX="5">
        <RadzenCard>
            <RadzenText TextAlign="TextAlign.Center" TextStyle="TextStyle.DisplayH3" Text="Welcome to Ban Hub!"/>
            <RadzenText TextAlign="TextAlign.Center" TextStyle="TextStyle.DisplayH6" Text="We provide a service which aims to clean up the state of 3rd party Call of Duty clients."/>
            <br/>
            <hr/>
            <br/>
            <RadzenText TextAlign="TextAlign.Center" TextStyle="TextStyle.H6" Text="Latest Global Bans"/>
            <RadzenDataGrid @ref="_dataGrid" TItem="Penalty" IsLoading="@_isLoading" Count="@_count" Data="@_indexTable" LoadData="@LoadData" Style="min-height: 175px">
                <Columns>
                    <RadzenDataGridColumn TItem="Penalty" Title="Community">
                        <Template Context="context">
                            <RadzenLink Path="@($"/Communities/{context.CommunityGuid}")" Text="@context.CommunityName"/>
                        </Template>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Penalty" Title="Offender">
                        <Template Context="context">
                            <RadzenLink Path="@($"/Players/{context.RecipientIdentity}")" Text="@context.RecipientUserName"/>
                        </Template>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Penalty" Property="Reason" Title="Reason"/>
                    <RadzenDataGridColumn TItem="Penalty" Title="Submitted" SortOrder="SortOrder.Descending">
                        <Template Context="context">
                            @context.Submitted.Humanize().Titleize()
                        </Template>
                    </RadzenDataGridColumn>
                </Columns>
                <EmptyTemplate>
                    <RadzenText TextAlign="TextAlign.Center" TextStyle="TextStyle.H6" class="rz-my-4" Text="There are no global bans..."/>
                </EmptyTemplate>
            </RadzenDataGrid>
        </RadzenCard>
    </RadzenColumn>
    <RadzenColumn Size="6" SizeXX="5">
        <RadzenRow>
            <RadzenStack Orientation="Orientation.Vertical">
                <RadzenColumn Size="6">
                    <RadzenRow JustifyContent="JustifyContent.Start">
                        <RadzenColumn SizeXS="12" SizeSM="6" SizeMD="4" SizeXL="3">
                            <RadzenCard>
                                <RadzenStack Orientation="Orientation.Vertical" Gap="0">
                                    <RadzenText TextStyle="TextStyle.DisplayH5" class="rz-color-primary" Style="margin: 0" Text="@_statistic.PenaltyCount.ToString("N0")"/>
                                    <RadzenText class="rz-text-tertiary-color" Text="Penalties"/>
                                </RadzenStack>
                            </RadzenCard>
                        </RadzenColumn>
                        <RadzenColumn SizeXS="12" SizeSM="6" SizeMD="4" SizeXL="3">
                            <RadzenCard>
                                <RadzenStack Orientation="Orientation.Vertical" Gap="0">
                                    <RadzenText TextStyle="TextStyle.DisplayH5" class="rz-color-primary" Style="margin: 0" Text="@_statistic.PlayerCount.ToString("N0")"/>
                                    <RadzenText class="rz-text-tertiary-color" Text="Players"/>
                                </RadzenStack>
                            </RadzenCard>
                        </RadzenColumn>
                        <RadzenColumn SizeXS="12" SizeSM="6" SizeMD="4" SizeXL="3">
                            <RadzenCard>
                                <RadzenStack Orientation="Orientation.Vertical" Gap="0">
                                    <RadzenText TextStyle="TextStyle.DisplayH5" class="rz-color-primary" Style="margin: 0" Text="@_statistic.CommunityCount.ToString("N0")"/>
                                    <RadzenText class="rz-text-tertiary-color" Text="Communities"/>
                                </RadzenStack>
                            </RadzenCard>
                        </RadzenColumn>
                        <RadzenColumn SizeXS="12" SizeSM="6" SizeMD="4" SizeXL="3">
                            <RadzenCard>
                                <RadzenStack Orientation="Orientation.Vertical" Gap="0">
                                    <RadzenText TextStyle="TextStyle.DisplayH5" class="rz-color-primary" Style="margin: 0" Text="@_statistic.ServerCount.ToString("N0")"/>
                                    <RadzenText class="rz-text-tertiary-color" Text="Servers"/>
                                </RadzenStack>
                            </RadzenCard>
                        </RadzenColumn>
                    </RadzenRow>
                </RadzenColumn>
                <RadzenColumn Size="6">
                    <RadzenCard>
                        <RadzenText TextStyle="TextStyle.DisplayH6" Text="Requirements for Activating Server for Read-Write Access to BanHub"/>
                        <RadzenText TextStyle="TextStyle.Body2" class="rz-text-tertiary-color">&bull; <b>Daily Client Count:</b> Minimum of 750 unique clients seen daily.</RadzenText>
                        <RadzenText TextStyle="TextStyle.Body2" class="rz-text-tertiary-color">&bull; <b>Minimum Clients:</b> Above 50,000 clients.</RadzenText>
                        <RadzenText TextStyle="TextStyle.Body2" class="rz-text-tertiary-color">&bull; <b>Community Age:</b> Active for at least 3 months with no long periods of inactivity.</RadzenText>
                        <RadzenText TextStyle="TextStyle.Body2" class="rz-text-tertiary-color">&bull; <b>Staff Presence:</b> Active staff presence. Responsible staff for global ban(s) to respond within reasonable period. (~3 working days)</RadzenText>
                        <RadzenText TextStyle="TextStyle.Body2" class="rz-text-tertiary-color">&bull; <b>No Unjustified Bans:</b> Server must not be known for imposing bans on players without proper justification or in a discriminatory manner.</RadzenText>
                        <br/>
                        <RadzenText Text="If all of these requirements are met, the server will be deemed sufficiently established, well-managed, and dependable, making it eligible for read-write access to BanHub."/>
                        <br/>
                        <RadzenStack Orientation="Orientation.Horizontal">
                            <RadzenButton href="https://discord.gg/39rMB7YE2R" ButtonStyle="ButtonStyle.Primary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-discord" viewBox="0 0 16 16">
                                    <title>Discord</title>
