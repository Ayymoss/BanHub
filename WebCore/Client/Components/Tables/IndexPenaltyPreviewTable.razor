@using Penalty = BanHub.WebCore.Shared.Models.IndexView.Penalty

<RadzenDataGrid @ref="_dataGrid" TItem="Penalty" IsLoading="@_isLoading" Count="@_count" Data="@_indexTable" LoadData="@LoadData"
                Style="min-height: 175px">
    <Columns>
        <RadzenDataGridColumn TItem="Penalty" Title="Community" MinWidth="120px">
            <Template Context="context">
                <RadzenLink Path="@($"/Communities/{context.CommunityGuid}")" Text="@context.CommunityName"/>
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="Penalty" Title="Offender" MinWidth="120px">
            <Template Context="context">
                <RadzenLink Path="@($"/Players/{context.RecipientIdentity}")" Text="@context.RecipientUserName"/>
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="Penalty" Property="Reason" Title="Reason" MinWidth="120px"/>
        <RadzenDataGridColumn TItem="Penalty" Title="Submitted" SortOrder="SortOrder.Descending" MinWidth="120px">
            <Template Context="context">
                @context.Submitted.Humanize().Titleize()
            </Template>
        </RadzenDataGridColumn>
    </Columns>
    <EmptyTemplate>
        <RadzenText TextAlign="TextAlign.Center" TextStyle="TextStyle.H6" class="rz-my-4" Text="There are no global bans..."/>
    </EmptyTemplate>
</RadzenDataGrid>
