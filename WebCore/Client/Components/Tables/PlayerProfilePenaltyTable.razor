@using Orientation = Radzen.Orientation
@using DialogService = Radzen.DialogService
@using Penalty = BanHub.WebCore.Shared.Models.PlayerProfileView.Penalty

<RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" class="rz-mb-4">
    <RadzenFormField Text="Filter" Variant="Radzen.Variant.Outlined">
        <ChildContent>
            <RadzenTextBox @bind-Value="_searchString" Change="OnSearch"/>
        </ChildContent>
        <End>
            <RadzenIcon Icon="search" IconStyle="IconStyle.Info"/>
        </End>
    </RadzenFormField>
</RadzenStack>
<RadzenDataGrid @ref="_dataGrid" TItem="Penalty" IsLoading="@_loading" Count="@_totalCount" Data="@_data" LoadData="@LoadData"
                Density="Density.Compact" AllowPaging="true" PageSize="10" AllowSorting="true" PagerAlwaysVisible="true"
                PagerHorizontalAlign="HorizontalAlign.Center" PageSizeOptions="new[] {10, 20}" ShowPagingSummary="true"
                PagingSummaryFormat="Displaying page {0} of {1} <b>(total {2} records)</b>" AllowColumnResize="true" RowClick="RowClickEvent" Style="min-height: 200px">
    <Columns>
        <RadzenDataGridColumn TItem="Penalty" Property="IssuerUserName" Title="Issuer">
            <Template Context="context">
                <RadzenLink Path="@($"/Players/{context.IssuerIdentity}")" Text="@context.IssuerUserName"/>
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="Penalty" Property="Reason" Title="Reason"/>
        <RadzenDataGridColumn TItem="Penalty" Property="PenaltyType" Title="Type">
            <Template Context="context">
                <EnumMudChip Penalty="@context.PenaltyType"/>
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="Penalty" Property="PenaltyScope" Title="Scope">
            <Template Context="context">
                <EnumMudChip Penalty="@context.PenaltyScope"/>
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="Penalty" Property="PenaltyStatus" Title="Status">
            <Template Context="context">
                <EnumMudChip Penalty="@context.PenaltyStatus"/>
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="Penalty" Property="CommunityName" Title="Community">
            <Template Context="context">
                <RadzenLink Path="@($"/Communities/{context.CommunityGuid}")" Text="@context.CommunityName"/>
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="Penalty" Property="Submitted" Title="Submitted" SortOrder="SortOrder.Descending">
            <Template Context="context">
                @context.Submitted.Humanize()
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="Penalty" Width="40px" TextAlign="TextAlign.End" Sortable="false" Frozen="true">
            <Template>
                <RadzenIcon Icon="touch_app" class="rzi-primary"/>
            </Template>
        </RadzenDataGridColumn>
    </Columns>
    <EmptyTemplate>
        <RadzenText TextAlign="TextAlign.Center" TextStyle="TextStyle.H6" class="rz-my-4" Text="The user has no penalties."/>
    </EmptyTemplate>
</RadzenDataGrid>
