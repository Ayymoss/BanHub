<RadzenStack Orientation="Orientation.Vertical" Gap="0">
    <RadzenText TextAlign="TextAlign.Center" TextStyle="TextStyle.H4" class="rz-mb-0" Text="Enter your token"/>
    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center" AlignItems="AlignItems.Center" Gap="0">
        <RadzenText TextAlign="TextAlign.Center" TextStyle="TextStyle.Body1" class="rz-text-tertiary-color rz-mb-0 rz-mr-1" Text="Generate a new token in-game with"/>
        <RadzenText TextAlign="TextAlign.Center" TextStyle="TextStyle.Body1" class="rz-color-primary rz-mb-0" Text="!BHAuth"/>
    </RadzenStack>
    <RadzenFormField class="rz-my-2" Text="Token" Variant="Variant.Text">
        <ChildContent>
            <RadzenTextBox @bind-Value="_token" Change="UserLogin"/>
        </ChildContent>
        <End>
            <RadzenIcon Icon="key" IconStyle="IconStyle.Info"/>
        </End>
    </RadzenFormField>
    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center">
        <RadzenButton Click="UserLogin" Text="Login" ButtonStyle="ButtonStyle.Success" IsBusy="_processing" BusyText="Logging in..."/>
        @if (!string.IsNullOrEmpty(_error))
        {
            <RadzenText TextAlign="TextAlign.Center" class="rz-color-warning rz-mb-0 rz-ml-2">Error: @_error</RadzenText>
        }
    </RadzenStack>
</RadzenStack>
