<RadzenStack Orientation="Orientation.Vertical" Gap="0">
    <RadzenStack Orientation="Orientation.Vertical" JustifyContent="JustifyContent.Center" AlignItems="AlignItems.Center">
        <RadzenText Text="Please enter a YouTube URL" TextStyle="TextStyle.Subtitle1" class="rz-mb-0"/>
        <RadzenFormField Text="Reason" Variant="Variant.Outlined" Style="min-width:300px;width:75%">
            <ChildContent>
                <RadzenTextBox @bind-Value="_evidence"/>
            </ChildContent>
            <End>
                <RadzenIcon Icon="warning" IconStyle="IconStyle.Info"/>
            </End>
        </RadzenFormField>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
            <RadzenIcon Icon="error"/>
            <RadzenText Text="Please make sure the channel you're uploading to belongs to your community. If the video is removed, the ban will be lifted." TextStyle="TextStyle.Body2" class="rz-mb-0"/>
        </RadzenStack>
    </RadzenStack>
    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceBetween" class="rz-mt-4">
        <RadzenText TextStyle="TextStyle.Caption" class="rz-mb-0 rz-color-danger" Text="This action is logged"/>
        <RadzenButton Click="SubmitEvidence" Text="Submit" ButtonStyle="ButtonStyle.Success" IsBusy="_processing" BusyText="Submitting..."/>
    </RadzenStack>
</RadzenStack>
